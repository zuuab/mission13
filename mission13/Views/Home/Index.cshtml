@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers Info</h1>

<table class="table table-sm table-striped table-bordered table-dark">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>

            <td>
                <a class="btn btn-warning btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID">Edit</a>
            </td>

            <td>
                <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID">Delete</a>
            </td>
        </tr>
        }
    </tbody>

</table>
